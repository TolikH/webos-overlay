#!/sbin/runscript

depend() {
	need net
}

start() {
	ebegin "Starting ${SVCNAME}"

	start-stop-daemon --start -- /usr/sbin/ls-hubd --public --daemon --conf /etc/luna-service2/ls-public.conf --pid-dir=/var/run --syslog

	eend 
}

stop() {
	start-stop-daemon --stop -p /var/run/ls-hubd.public.pid 
}

# vim: ts=4 filetype=gentoo-init-d
